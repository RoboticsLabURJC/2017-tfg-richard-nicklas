<?xml version="1.0"?>
<robot name="car">


  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

   <link name='chassis'>
     <pose>0 0 0.1 0 0 0</pose>

   <inertial>
	   <mass value="10.0"/>
     <pose>0.0 0 0.1 0 0 0</pose>
     <inertia ixx="0.5" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="0.1"/>
    </inertial>
   
    <collision name='collision'>
       <geometry>
       <box size="0.4 0.2 0.1"/>
       </geometry>
     </collision>

    <visual name='visual'>
      <pose>0 0 0.0 0 0 0</pose>
      <geometry>
       <box size="0.4 0.2 0.1"/>
      </geometry>
      <material name="white"/> 
   </visual>

<collision name='caster_collision'>
 <pose>-0.15 0 -0.05 0 0 0</pose>
 <geometry>
	 <sphere radius="0.05"/>
 </geometry>

 <surface>
 <friction>
 <ode>
 <mu>0</mu>
 <mu2>0</mu2>
 <slip1>1.0</slip1>
 <slip2>1.0</slip2>
 </ode>
 </friction>
 </surface>
 </collision>

<visual name='caster_visual'>
 <pose>-0.15 0 -0.05 0 0 0</pose>
 <geometry>
	 <sphere radius="0.05"/>
 </geometry>
 </visual>

</link>


<link name="left_wheel">
 <pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
 <collision name="collision">
 <geometry>
 <cylinder radius="0.1" length="0.05"/>
 </geometry>
 </collision>
 <visual name="visual">
 <geometry>
 <cylinder radius="0.1" length="0.05"/>
 </geometry>
 <material name="blue"/> 
</visual>
 </link>

<joint type="revolute" name="left_wheel_hinge">
 <limit effort="100" velocity="30"/>
 <pose>0 0 -0.03 0 0 0</pose>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
 </joint>



<link name="right_wheel">
 <pose>0.1 -0.13 0.1 0 1.5707 1.5707</pose>
 <collision name="collision">
 <geometry>
 <cylinder radius="0.1" length="0.05"/>
 </geometry>
 </collision>
 <visual name="visual">
 <geometry>
 <cylinder radius="0.1" length="0.05"/>
 </geometry>
 <material name="blue"/> 
 </visual>
 </link>

<joint type="revolute" name="right_wheel_hinge">
 <limit effort="100" velocity="30"/>
	 <!--<limit effort="100" velocity="30"  lower="-2.967" uppper="2.967"/>-->
 <pose>0 0 0.03 0 0 0</pose>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
 </joint>




  </robot>
